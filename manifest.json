{
  "manifest_version": 2,

  "name": "Map Switcher",
  "description": "Switch between different map services.",
  "version": "0.2",
  "options_page": "html/options.html",

  "browser_action": {
    "default_icon": {
      "19": "image/mapswitcher19x19.png",
      "38": "image/mapswitcher38x38.png"
    },
    "default_popup": "html/mapSwitcher.html",
    "default_title": "Map Switcher"
  },
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["vendor/jquery/jquery-2.2.4.min.js"]
  },
  "content_scripts": [{
    "matches": [
      "*://www.google.com/maps/*",
      "*://www.google.co.uk/maps/*",
      "*://www.bing.com/maps/*",
      "*://www.bing.com/mapspreview/*",
      "*://www.openstreetmap.org/*",
      "*://www.waze.com/*",
      "*://www.geocaching.com/map/*"
    ],
    "js": [
      "vendor/jquery/jquery-2.2.4.min.js",
      "src/mapUtil.js",
      "src/dataExtractor.js"
    ]
  }],
  "icons": {
    "16": "image/mapswitcher16x16.png",
    "32": "image/mapswitcher32x32.png",
    "48": "image/mapswitcher48x48.png",
    "128": "image/mapswitcher128x128.png"}
}
